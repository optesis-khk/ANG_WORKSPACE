<?xml version="1.0" encoding="utf-8"?>
<!-- by ang -->
<odoo>
    <data>

        <report
                id="optesis_report_header"
                model="purchase.order"
                string="Template Speedy"
                report_type="qweb-pdf"
                name="Template_speedy.report_Template_speedy_header_view"
                file="Template_speedy.report_Template_speedy_header"
                menu="True"
        />
        
        
        <template id="report_Template_speedy_header_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="Template_speedy.speedy_external_view">
                        <t t-set="address">
            <div class="text-left" t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
            <p class="text-left" t-if="o.partner_id.vat" align="left" ><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
        </t>
        <t t-if="o.dest_address_id">
            <t t-set="information_block">
                <strong>Shipping address:</strong>
                <div t-if="o.dest_address_id">
                    <div t-field="o.dest_address_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}" name="purchase_shipping_address"/>
                </div>

            </t>
        </t>
                        
            
                        <div class="page" style="background-image:url('/Template_speedy/static/img/Speedy_foot.png');background-size:100% 100%;">
                           
                            <h2 t-if="o.state == 'draft'">Demande d'offre #<span t-field="o.name"/></h2>
            <h2 t-if="o.state in ['sent', 'to approve']">Purchase Order #<span t-field="o.name"/></h2>
            <h2 t-if="o.state in ['purchase', 'done']">Purchase Order Confirmation #<span t-field="o.name"/></h2>
            <h2 t-if="o.state == 'cancel'">Cancelled Purchase Order #<span t-field="o.name"/></h2>

            <div id="informations" class="row mt32 mb32">
                <div t-if="o.name" class="col-3 bm-2">
                    <strong>Reference:</strong>
                    <p t-field="o.name" class="m-0"/>
                </div>
                <div t-if="o.partner_ref" class="col-3 bm-2">
                    <strong>Reference:</strong>
                    <p t-field="o.partner_ref" class="m-0"/>
                </div>
                <div t-if="o.date_order" class="col-3 bm-2">
                    <strong>Date Commande:</strong>
                    <p t-field="o.date_order" class="m-0"/>
                </div>
            </div>

            <table class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <th><strong>Description</strong></th>
                        <th class="text-center"><strong>Date Req.</strong></th>
                        <th class="text-right"><strong>Quantit√©</strong></th>
                        <th class="text-right"><strong>Prix Unitaire</strong></th>
                        <th class="text-right"><strong>Montant</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.name"/>
                        </td>
                       
                        <td class="text-center">
                            <span t-field="line.date_planned" t-field-options='{"format": "dd-MMM-yyyy"}'/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                        </td>
                         <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-field="line.price_unit"
                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div id="total" class="row justify-content-end">
                <div class="col-4">
                    <table class="table table-sm">
                        <tr class="border-black">
                            <td><strong>Sous-total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                      
                        <tr class="border-black">
                             <td>
                               <strong>Total</strong>
                            </td>
                            <td class="text-right">
                            <span t-field="o.amount_total"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <p t-field="o.notes"/>
            <div class="oe_structure"/>
            <p  style="padding-top:400px">
                            <![CDATA[&nbsp;]]>
            </p>
                        </div>
                        
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
