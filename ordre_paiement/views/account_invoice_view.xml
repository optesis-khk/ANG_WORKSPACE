<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="view_invoice_supplier_purchase_form_inherit">
      <field name="name">account.invoice.supplier.purchase.inherit</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="purchase.view_invoice_supplier_purchase_form"/>
      <field name="arch" type="xml">
        <field name="vendor_bill_purchase_id" position="replace">
          <field name="op_id" placeholder="Selection d'ordre de paiement" domain="[('state', '=', 'validate')]"/>
        </field>
        <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='price_subtotal']" position="after">
          <field name="origin" invisible="1"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
