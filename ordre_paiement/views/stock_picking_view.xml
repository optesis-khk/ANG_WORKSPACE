<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="view_picking_form_inherit">
      <field name="name">stock.picking.form.inherit</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <field name="origin" position="after">
          <field name="bc_number"/>
          <field name="op" invisible="1"/>
        </field>
        <xpath expr="//form/sheet/notebook/page[2]/field/tree/field[@name='product_id']" position="after">
          <field name="prix_achat"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
