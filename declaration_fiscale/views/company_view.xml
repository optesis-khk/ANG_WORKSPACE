<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="view_company_form_inherit">
      <field name="name">res.company.form.inherit</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook[last()]" position="inside">
          <page string="Autres informations">
            <group string="Informations complÃ©mentaire">
              <group>
                <field name="sigle"/>
                <field name="forme"/>
              </group>
              <group>
                <field name="profession"/>
              </group>
            </group>
            <group string="Nom et adresse du comptable">
              <group>
                <field name="nom_comptable" domain="[('supplier', '=', True)]"/>
                <field name="tel_comptable"/>
              </group>
              <group>
                <field name="bp_comptable"/>
              </group>
            </group>
            <group string="Exercice comptable">
              <label for="debut_ex" string="Exercice comptable du "/>
              <div>
                <field name="debut_ex" class="oe_inline"/>  au  <field name="fin_ex" class="oe_inline"/>
              </div>
            </group>
          </page>
          <page string="Titre de loyers">
            <field name="loyer_ids">
              <tree editable="bottom">
                <field name="adresse"/>
                <field name="partner_id" domain="[('supplier', '=', True)]"/>
                <field name="usage"/>
                <field name="loyer"/>
                <field name="irpp"/>
                <field name="debut_c"/>
                <field name="fin_c"/>
              </tree>
            </field>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
